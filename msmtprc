# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_starttls   on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        /var/log/msmtp
aliases        /etc/aliases

account        default
host           mailserver
port           mailport
from           mailfrom
user           mailuser
password       mailpassword
